{
    "compilerOptions": {
        "strict": true,
        "module": "CommonJS",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "target": "ES6",
        "moduleResolution": "Node",
        "sourceMap": true,
        "outDir": "./",
        "baseUrl": "./src",
        "declaration": true,
        "jsx": "react"
    },
    "exclude": ["src/tests/**"],
    "include": ["src/**/*"]
}
